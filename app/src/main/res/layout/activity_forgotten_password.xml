<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baground_color"
    tools:context=".Activity.ForgottenPasswordActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/forgottenPassword_appBar"
        ></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Reset Your password by providing Your Email Address"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        android:textSize="18sp"
        android:layout_marginTop="20dp">

    </TextView>


    <EditText
        android:id="@+id/forgottenPasswordInputEmailET"
        android:background="@drawable/custom_button2"
        android:layout_marginLeft="20dp"
        android:paddingLeft="5dp"
        android:backgroundTint="@color/pureWhite"
        android:drawablePadding="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textEmailAddress"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:hint="Enter Email"
        android:drawableLeft="@drawable/email">

    </EditText>


    <Button
        android:id="@+id/forgottenPasswordGoBTN"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button1"
        android:text="Go"
        android:textAllCaps="false"
        android:textColor="@color/pureWhite"
        android:textSize="20sp" />



</LinearLayout>