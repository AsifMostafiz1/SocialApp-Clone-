<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SetupActivity">

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_marginTop="20dp"
            android:id="@+id/setupProfileImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/profile"
            android:layout_centerHorizontal="true"

            app:civ_border_color="@color/pureWhite"
            app:civ_border_width="3dp">



        </com.mikhaellopez.circularimageview.CircularImageView>

        <TextView
            android:layout_below="@+id/setupProfileImage"
            android:id="@+id/update_profile_imageTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Update profile Picture"
            android:textAlignment="center"
            android:textColor="@color/pureWhite"
            android:textStyle="bold"
            android:layout_marginBottom="30dp">

        </TextView>

    </RelativeLayout>

    <EditText
        android:id="@+id/setupUserName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="10dp"
        android:hint="User Name"
        android:imeOptions="actionDone"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textSize="18sp"
        android:textStyle="bold|italic" />


    <EditText
        android:id="@+id/setupUserFullName"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"

        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Name"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/setupUserCountry"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Country"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:textStyle="bold|italic" />




    <Button

        android:id="@+id/setupSaveBTN"

        style="?android:attr/borderlessButtonStyle"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_button1"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/pureWhite"
        android:textSize="20sp"

        android:textStyle="italic" />

</LinearLayout>