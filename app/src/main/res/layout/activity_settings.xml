<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SettingsActivity">
    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/settings_page_app_bar"></include>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/colorPrimary">


        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/settings_activity_profile_image"
            android:layout_width="200dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:text="Change profile Picture"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:backgroundTint="@color/pureWhite"
            android:background="@drawable/custom_button2"
            android:layout_centerHorizontal="true"
            android:id="@+id/setting_change_profile_Picture_BTN"
            ></TextView>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/profile"
            android:layout_centerHorizontal="true"
            android:id="@+id/settings_activity_profile_image">

        </com.mikhaellopez.circularimageview.CircularImageView>

    </RelativeLayout>






    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/settings_activity_profile_status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button2"
                android:hint="Profile status"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textSize="16sp"
                />



            <EditText
                android:id="@+id/settings_activity_profile_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button2"
                android:drawablePadding="10dp"
                android:hint="Profile Name"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/settings_activity_profile_user_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button2"
                android:drawablePadding="10dp"
                android:hint="user_name"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/settings_activity_profile_country"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button2"
                android:drawablePadding="10dp"
                android:hint="Country Name"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textSize="16sp" />



            <EditText
                android:id="@+id/settings_activity_profile_gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button2"
                android:drawablePadding="10dp"
                android:hint="Gender"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/settings_activity_profile_birthDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button2"
                android:drawablePadding="10dp"
                android:hint="Birth Date"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/settings_activity_profile_relationship_status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button2"
                android:drawablePadding="10dp"
                android:hint="Relationship Status"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textSize="16sp"/>


            <Button
                android:id="@+id/settings_activity_update_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button1"
                android:text="Update profile Information"
                android:textAllCaps="false"
                android:textColor="@color/pureWhite"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />



        </LinearLayout>


    </ScrollView>




</LinearLayout>